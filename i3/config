# Reference: http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4
font pango:monospace 8
floating_modifier $mod

# Startup applications
exec_always --no-startup-id ~/.i3/setbg.sh
exec_always --no-startup-id "~/.i3/composite.sh on"

# Colors
# class        border  backgr. text    indicator child_border
#client.focused #D28A47 #944E0E #FFFFFF #F8F4B0D #D38A47
#client.background #000000

# Applications
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+d exec dmenu_run
bindsym $mod+l exec ~/.i3/lockscreen.sh

# Screenshots
bindsym --release $mod+Print exec --no-startup-id "~/.i3/screenshot.sh screen"
bindsym --release $mod+Shift+Print exec --no-startup-id "~/.i3/screenshot.sh window"

# Window keys
bindsym $mod+q kill

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+f fullscreen toggle

# Layout
bindsym $mod+h split h
bindsym $mod+v split v

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Tiling/Floating
bindsym $mod+space focus mode_toggle
bindsym $mod+Shift+space floating toggle

# Hierarchy focus
bindsym $mod+a focus parent
bindsym $mod+c focus child

# Workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# Reload the configuration file
bindsym $mod+Shift+c reload

# X session commands
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec --no-startup-id "~/.i3/quit.sh"

mode "resize" {
        bindsym h resize grow width 10 px or 10 ppt
        bindsym Shift+h resize shrink width 10 px or 10 ppt
        bindsym v resize grow height 10 px or 10 ppt
        bindsym Shift+v resize shrink height 10 px or 10 ppt

        bindsym Escape mode "default"
}

mode "no-bindings" {
  bindsym $mod+Shift+F12 mode "default"
}

# Mode switch bindings
bindsym $mod+r mode "resize"
bindsym $mod+Shift+F12 mode "no-bindings"

# Scratchpad
bindsym $mod+minus scratchpad show
bindsym $mod+Shift+minus move scratchpad

# Volume keys
bindsym $mod+m exec "i3-sensible-terminal -e  alsamixer"
bindsym $mod+Shift+m exec --no-startup-id "amixer -q set Master toggle"
bindsym $mod+KP_Add exec --no-startup-id "~/.i3/volume.sh '10%+'"
bindsym $mod+KP_Subtract exec --no-startup-id "~/.i3/volume.sh '10%-'"
bindsym $mod+Shift+KP_Add exec --no-startup-id "~/.i3/volume.sh '100%'"
bindsym $mod+Shift+KP_Subtract exec --no-startup-id "~/.i3/volume.sh '0%'"

# Status bar
bar {
        status_command i3status
        mode hide
        hidden_state hide
        modifier $mod
        tray_output primary
}
bindsym $mod+F12 bar hidden_state toggle

# Floating windows
for_window [class="Xmessage"] floating enable
for_window [title="^alsamixer$"] floating enable
for_window [window_role="Organizer" class="Firefox"] floating enable
for_window [title="^Figure " class="Octave-gui"] floating enable
for_window [title="^R Graphics" class="R_x11"] floating enable
for_window [class="^Blender$"] fullscreen enable

# Workspace back and forth
workspace_auto_back_and_forth yes

# Urgency hint
force_display_urgency_hint 500 ms

# Other stuff
hide_edge_borders both
show_marks yes
